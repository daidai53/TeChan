<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:background="#fa7d49"
        >
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/geren_w"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginRight="105dp"
            />
        <ImageButton
            android:id="@+id/mail_button"
            android:src="@mipmap/mailbox_pic"
            android:layout_width="28dp"
            android:layout_height="18dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="false"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        ><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/gerenb1"
            android:src="@mipmap/gerenpic1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
        <ImageView
            android:id="@+id/gerenb2"
            android:src="@mipmap/gerenpic2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
        <ImageView
            android:src="@mipmap/gerenpic3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
        <ImageView
            android:id="@+id/gerenb3"
            android:src="@mipmap/gerenpic4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
        <ImageView
            android:id="@+id/gerenb4"
            android:src="@mipmap/gerenpic5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
        <ImageView
            android:id="@+id/gerenb5"
            android:src="@mipmap/gerenpic6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
        <ImageView
            android:src="@mipmap/gerenpic7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
    </LinearLayout>

    </ScrollView>
</LinearLayout>